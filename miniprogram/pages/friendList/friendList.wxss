/* miniprogram/pages/friendList/friendList.wxss */
.list-item{ width: 100%; height: 150rpx; display: flex; background: #fff; border-bottom: 1px solid #cdcdcd;}

.list-item .avatar{ width: 150rpx; height: 150rpx; padding: 20rpx; box-sizing: border-box;}
.list-item .avatar image{ width: 100%; height: 100%; border-radius: 50%;}

.list-item .info{ width: calc(100% - 150rpx); height: 150rpx; padding: 15rpx 30rpx; box-sizing: border-box;}
.list-item .info text{ display: block; width: 100%; height: 50%; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;}
.list-item .info .name{ font-size: 16px; line-height: 60rpx;}
.list-item .info .signature{ font-size: 12px; color: gray; line-height: 60rpx;}

.no-friend{ font-size: 16px; color: #cdcdcd; width: 60%; position: absolute; top: 50%; left: 50%; transform: translate(-50%); text-align: center;}
