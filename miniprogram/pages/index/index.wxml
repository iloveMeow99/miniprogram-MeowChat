<!--miniprogram/pages/index/index.wxml-->
<view class='index'>
  <swiper class="index-swiper"
          indicator-dots="{{true}}"
          indicator-color="rgba(255,255,255,.3)"
          indicator-active-color="#ffde55"
          autoplay="{{false}}"
          circular="{{true}}">
    <block wx:for="{{imgUrls}}" wx:key="index">
      <swiper-item>
        <image src="{{item}}" />
      </swiper-item>
    </block>
  </swiper>

  <view class='index-tab'>
    <view class="active">推荐</view>
    <view>最新</view>
  </view>

  <view class="index-list">
    <view class="index-list-item" wx:for="{{ dataList }}" wx:key="index">
      <image mode="aspectFill" src="{{ item.userAvatar }}"></image>
      <view class="index-list-text">
        <text class="name">{{ item.nickName }}</text>
        <text data-id="{{ item._id }}" bindtap="handleLikes">
          <text class="iconfont iconxihuan"></text>
          <text class="likes">{{ item.likes }}</text>
        </text>
      </view>
    </view>
  </view>
</view>