/* miniprogram/pages/index/index.wxss */
.index-swiper{
  height: 180px;
  margin: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.index-swiper image{
  width: 100%;
  height: 100%;
}
.index-tab{
  display: flex;
}
.index-tab view{
  flex: 1;
  text-align: center;
  padding: 10rpx;
  margin: 20rpx;
}
.index-tab view.active{
  border-bottom: 2px solid #ffde55;
  color: #ffde55;
}

.index-list{ display: flex; flex-wrap: wrap;}
.index-list .index-list-item{ width: 50%; margin-bottom: 10rpx;}
.index-list .index-list-item image{ display: block; width: 90%; height: 300rpx; margin: 0 auto;}

.index-list-text{ display: flex; width: 90%; height: 20px; line-height: 20px; justify-content: space-between; margin: 0 auto; color: #ffde55; font-size: 16px;}
.index-list-text .iconfont{
  color: #cdcdcd;
}